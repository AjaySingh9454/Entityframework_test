@model Entityframeworktest.Models.UserMaster
<div class="container">
    <br />
    <br />
    <div class="card">
        <div class="card-body">
            <form  method="post" id="userform">
                <div class="form-group">
                    <input type="text" style="display:none" value="@Model.Id" required class="form-control" id="Id" name="Id">
                    <label for="Name">Name :</label>
                    <input type="text" value="@Model.UserName" required class="form-control" id="UserName" name="UserName" aria-describedby="name" placeholder="Enter name">

                </div>

                <div class="form-group">
                    <label for="Name">Mobile :</label>
                    <input type="text" value="@Model.Mobile" required class="form-control" id="Mobile" name="Mobile" aria-describedby="Mobile" placeholder="Enter Mobile No">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" value="@Model.Email" required id="Email" name="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" value="@Model.Password" required class="form-control" id="Password" name="Password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="role">User-In-Role</label>
                    <select class="form-control" value="@Model.UserInRole" id="UserInRole" name="UserInRole">
                        <option>User</option>
                    </select>
                </div>
                <div class="form-check">
                    <input type="checkbox" required class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">IsActive</label>
                </div>
                <button type="submit" required class="btn btn-primary">Add New User</button>
            </form>
        </div>
    </div>
</div>

<script>

    $("#userform").submit(function (e) {
        e.preventDefault();
        var obj = {
            UserName: $("#UserName").val(),
            UserInRole: $("#UserInRole").val(),
            Email: $("#Email").val(),
            Password: $("#Password").val(),
            Mobile: $("#Mobile").val(),
            Id: $("#Id").val(),
        };
        var data = JSON.stringify(obj);

        console.log(data);
        $.ajax({
            type: 'POST',
            cache: false,
            url: '/Home/SaveOrUpdate',
            data: { data: data},
            success: function (res) {
                alert(res);
                location.href="/Home/About"
            },
            error: function (jqXHR, textStatus, errorThrown) {
            }
        });

    });

</script>